<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login4"
    android:paddingLeft="28dp"
    android:paddingTop="155dp"
    tools:context="com.venson.java007.Login1Activity">

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="353dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="13dp">


        <Button
            android:id="@+id/btCc"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="確認"
            android:textColor="#ffffff"
            android:onClick="onClickC"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_above="@+id/btBc"
            android:layout_alignLeft="@+id/btBc"
            android:layout_alignStart="@+id/btBc"
            android:layout_marginBottom="23dp"
            android:background="@null"
            android:text="重發驗證信"
            android:textColor="#81CDE4" />

        <Button
            android:id="@+id/btBc"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"
            android:background="@null"
            android:onClick="onClickB"
            android:text="Back"
            android:textColor="#81CDE4" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="125dp"
            android:layout_height="32dp"
            android:layout_above="@+id/btCc"
            android:layout_alignLeft="@+id/btCc"
            android:layout_alignStart="@+id/btCc"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:background="@null"
            android:ems="5"
            android:inputType="number"
            android:textSize="30dp"
            android:maxLength="5"
            android:letterSpacing="0.3"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
