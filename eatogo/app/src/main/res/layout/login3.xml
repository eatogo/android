<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login3"
    android:paddingLeft="70dp"
    android:paddingTop="185dp"
    tools:context="com.venson.java007.Login1Activity">

    <RelativeLayout
        android:layout_width="314dp"
        android:layout_height="375dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="49dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Account Number"
            android:textColor="#81CDE4"
            />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText7"
            android:layout_alignStart="@+id/editText7"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="11dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="請輸入電話號碼"
            android:inputType="phone"
            android:textColorHint="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/editText5"
            android:layout_marginTop="24dp"
            android:text="Password"
            android:textColor="#81CDE4"/>

        <EditText
            android:id="@+id/editText6"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="請輸入6-12為英數字組合的密碼"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColorHint="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText6"
            android:layout_marginTop="27dp"
            android:text="Confirm Password"
            android:textColor="#81CDE4" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="請再次確認密碼"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText7"
            android:layout_marginTop="30dp"
            android:text="Email"
            android:textColor="#81CDE4" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText7"
            android:layout_alignStart="@+id/editText7"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="請輸入Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btNs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText8"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:onClick="onClick2"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
