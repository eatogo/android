<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.venson.create_user.CreateActivity"
    android:background="@drawable/login3"
    android:paddingTop="180dp"
    android:paddingLeft="40dp"
    >

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="388dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="102dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="Account Number"
            android:textColor="#81CDE4" />

        <EditText
            android:id="@+id/tvUserId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="center"
            android:hint="請輸入電話號碼"
            android:inputType="phone"
            android:textColorHint="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/etUserId"
            android:layout_marginTop="26dp"
            android:text="Password"
            android:textColor="#81CDE4" />


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="請輸入6-12為英數字組合的密碼"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColorHint="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etPassword"
            android:layout_marginTop="27dp"
            android:text="Confirm Password"
            android:textColor="#81CDE4" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="請再次確認密碼"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText7"
            android:layout_marginTop="30dp"
            android:text="Email"
            android:textColor="#81CDE4" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:gravity="center"
            android:hint="請輸入Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff0000"
            android:textSize="14sp"
            android:layout_marginTop="14dp"/>

        <Button
            android:id="@+id/btSubmit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:onClick="onSubmitClick"
             />
    </LinearLayout>
</LinearLayout>
